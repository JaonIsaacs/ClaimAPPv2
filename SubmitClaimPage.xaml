<Page x:Class="ClaimAPPv2.SubmitClaimPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ClaimAPPv2"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SubmitClaimPage">

    <Grid>
        <StackPanel>
            <Label Content="Claim Description" />
            <TextBox x:Name="ClaimDescriptionTextBox" />
            <Label Content="Attach Document" />
            <Button Content="Browse Document" Click="BrowseDocument_Click" />
            <Button Content="Submit Claim" Click="SubmitClaim_Click" />
        </StackPanel>

        <!-- Buttons to navigate between pages -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom">
            <Button Content="View Claims" Click="ViewClaims_Click" />
            <Button Content="Approve/Deny Claim" Click="ApproveDenyClaim_Click" />
        </StackPanel>
    </Grid>
</Page>
